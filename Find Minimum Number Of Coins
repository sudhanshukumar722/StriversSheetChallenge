#include <bits/stdc++.h> 
int findMinimumCoins(int amount) 
{
    // Write your code here
      static int coins[9]={1000,500,100,50,20,10,5,2,1};
    int mini=0;
    int i=0;
    while(amount>0){
        if(amount>=coins[i]){
            amount=amount-coins[i];
            mini++;
        }
        else{
            i++;
        }
    }
    return mini;
}
